<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:rfal="http://schemas.android.com/apk/res-auto"
              xmlns:rfab="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_btn1"
        android:text="安装APP"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_btn2"
        android:text="卸载APP"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send_message"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_btn3"
        android:text="发送消息到另一个APP"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_inspectdata"
        android:text="新增一条数据"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_recyclerview"
        android:text="列表"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dbdata"/>
    </LinearLayout>
    <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout

        android:id="@+id/rfab_group_sample_fragment_a_rfal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        rfal:rfal_frame_color="#ffffff"
        rfal:rfal_frame_alpha="0.7"

        >

        <!-- 只是用于占位，id和位置必须跟RFABGroupSampleActivity中的RFAB位置完全一致！ -->
        <com.wangjie.rapidfloatingactionbutton.RapidFloatingActionButton

            android:id="@+id/rfab_group_sample_rfab_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            rfab:rfab_size="normal"

            rfab:rfab_drawable="@drawable/rfab__drawable_rfab_default"
            rfab:rfab_color_normal="#d84315"
            rfab:rfab_color_pressed="#bf360c"
            rfab:rfab_shadow_radius="7dp"
            rfab:rfab_shadow_color="#999999"
            rfab:rfab_shadow_dx="0dp"
            rfab:rfab_shadow_dy="5dp"

            android:visibility="visible"
            />

    </com.wangjie.rapidfloatingactionbutton.RapidFloatingActionLayout>



</FrameLayout>